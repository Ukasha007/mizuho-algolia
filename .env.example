# Website Configuration
SITE_BASE_URL=https://www.mizuhogroup.com

# Optional - Performance Configuration
NODE_ENV=development
LOG_LEVEL=info

# General sync configuration
SYNC_BATCH_SIZE=100
MAX_RETRIES=3
RATE_LIMIT_DELAY=1000

# Static Pages Performance Tuning
# Batch size for static pages processing (default: 10, increase for faster syncs)
STATIC_PAGES_BATCH_SIZE=10

# Max concurrent page requests (default: 6, increase to 8-10 for faster syncs)
STATIC_PAGES_MAX_CONCURRENT=6

# Fetch all locales (default: true, set to false to only fetch primary locale)
FETCH_ALL_LOCALES=true

# Rate limit safety buffer (default: 0.05 = 5%, lower for more aggressive syncs)
# Webflow Business/Enterprise plans have 120 requests/min, Standard plans have 60/min
# 0.05 = stop at 95% of rate limit, 0.1 = stop at 90% of rate limit
RATE_LIMIT_SAFETY_BUFFER=0.05

# Delay between requests in milliseconds (default: 50ms, 0 = no delay)
INTER_REQUEST_DELAY=50